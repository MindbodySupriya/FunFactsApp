<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:id="@+id/linearLayout"
        tools:context=".MainActivity" android:background="@android:color/holo_green_light">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you know?"
            android:textSize="24sp" android:textColor="#80FFFFFF"
            android:paddingBottom="20dp" android:id="@+id/textData"/>
    <TextView
            android:text="An ant stretches in the morning"
            android:layout_width="match_parent"
            android:layout_height="350dp" android:id="@+id/factTextView" android:textSize="24sp"
            android:textColor="@android:color/white"/>
    <Button
            android:text="Show Another Fact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/showFactButton"
            android:background="@android:color/white" android:textColor="@android:color/holo_green_light"/>


</LinearLayout>